IMAGE_NAME="cturra/radarr"
CONTAINER_NAME="radarr"

# radarr configuration directory
# ... on docker host (EXTernal)
EXT_CONFIG_DIR="/data/radarr/config"
# ... in docker container (INTernal)
INT_CONFIG_DIR="/volumes/config/radarr"

# media location
# ... on docker host (EXTernal)
EXT_MEDIA_DIR="/media/movies"
# ... in docker container (INTernal)
INT_MEDIA_DIR="/volumes/media"

# download (complete) directory 
# ... on docker host (EXTernal)
EXT_DOWNLOAD_DIR="/data/downloads/complete"
# ... in docker container (INTernal)
INT_DOWNLOAD_DIR="/data/downloads/complete"
